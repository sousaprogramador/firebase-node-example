{
  "compilerOptions": {
   "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017", "es2016", "es2015"],
    "moduleResolution": "node",
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": [
    "src","src/types/**/*.d.ts"
  ]
}
